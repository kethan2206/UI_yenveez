<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="144dp" android:height="168dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#ffbcc1f0" />
            <item android:name="android:shadowColor">#29000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">15</item>
            <item android:name="android:shadowDy">15</item>
        </shape>
    </item>
</selector>